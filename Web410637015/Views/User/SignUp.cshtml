@model Web410637015.ViewModels.SignUpData


@{
    ViewBag.Title = "SignUp";
}

<h2>會員註冊</h2>

@using (Html.BeginForm("SignUp", "User", FormMethod.Post))
{
    <p>姓名: @Html.TextBoxFor(m => m.Name) @Model.NameMessage.</p>
    <p>體重: @Html.TextBoxFor(m => m.Password) @Model.AccountMessage</p>
    <p>密碼: @Html.PasswordFor(m => m.Account) @Model.PasswordMessage</p>
    <p>@Model.Message </p>
    <input type="submit" name="name" value="註冊" />
}
